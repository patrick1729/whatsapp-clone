{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:model",
                "onlyDependOnLibsWithTags": ["scope:model"]
              },
              {
                "sourceTag": "scope:common-components",
                "onlyDependOnLibsWithTags": ["scope:common-components", "scope:model"]
              },
              {
                "sourceTag": "scope:whatsapp-backend",
                "onlyDependOnLibsWithTags": ["scope:whatsapp-backend", "scope:model"]
              },
              {
                "sourceTag": "scope:whatsapp-ui",
                "onlyDependOnLibsWithTags": ["scope:whatsapp-ui", "scope:model", "scope:common-components"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
